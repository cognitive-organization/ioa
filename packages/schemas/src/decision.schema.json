{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ioa.dev/schemas/v0.2/decision.json",
  "title": "IOA Decision",
  "description": "Records an architectural or organizational decision with context, options, and rationale",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": { "enum": ["ioa.dev/v0.1", "ioa.dev/v0.2"] },
    "kind": { "const": "Decision" },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "pattern": "^[a-z][a-z0-9-]*$" },
        "owner": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": { "type": "string" },
                "role": { "type": "string" }
              }
            }
          ]
        },
        "labels": { "type": "object", "additionalProperties": { "type": "string" } },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "version": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "spec": {
      "type": "object",
      "required": ["id", "status", "domain", "context"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^DEC-[0-9]+$"
        },
        "status": {
          "type": "string",
          "enum": ["proposed", "accepted", "active", "deprecated", "superseded", "reversed"]
        },
        "domain": { "type": "string" },
        "date": {
          "type": "string",
          "format": "date"
        },
        "deciders": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string" },
                  "role": { "type": "string" }
                }
              }
            }
          ]
        },
        "context": { "type": "string" },
        "initiatedBy": {
          "type": "object",
          "properties": {
            "type": { "enum": ["human", "agent"] },
            "name": { "type": "string" },
            "model": { "type": "string" },
            "confidence": { "type": "number" }
          }
        },
        "reviewDate": { "type": "string", "format": "date" },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "pros": {
                "type": "array",
                "items": { "type": "string" }
              },
              "cons": {
                "type": "array",
                "items": { "type": "string" }
              },
              "estimatedCost": { "type": "string" }
            }
          }
        },
        "chosen": { "type": "string" },
        "rationale": { "type": "string" },
        "assumptions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "statement"],
            "properties": {
              "id": { "type": "string" },
              "statement": { "type": "string" },
              "status": { "enum": ["valid", "invalidated", "untested"] },
              "validatedAt": { "type": "string", "format": "date" }
            }
          }
        },
        "kpiImpact": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["kpi", "expected"],
            "properties": {
              "kpi": { "type": "string" },
              "expected": { "type": "string" }
            }
          }
        },
        "reversibility": {
          "type": "string",
          "enum": ["easy", "moderate", "hard", "irreversible"]
        },
        "relatedWorkflow": { "type": "string" },
        "supersededBy": {
          "type": ["string", "null"]
        }
      }
    },
    "status": {
      "type": "object",
      "properties": {
        "state": { "enum": ["proposed", "active", "reversed", "archived"] },
        "actualOutcome": { "type": "string" },
        "kpiActualImpact": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["kpi", "expected", "actual"],
            "properties": {
              "kpi": { "type": "string" },
              "expected": { "type": "string" },
              "actual": { "type": "string" },
              "variance": { "type": "string" }
            }
          }
        },
        "executionCost": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "currency": { "type": "string" }
          }
        },
        "closedAt": { "type": "string", "format": "date-time" },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "status"],
            "properties": {
              "type": { "type": "string" },
              "status": { "enum": ["True", "False", "Unknown"] },
              "reason": { "type": "string" },
              "message": { "type": "string" },
              "lastTransitionTime": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
