{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ioa.dev/schemas/v0.1/decision.json",
  "title": "IOA Decision",
  "description": "Records an architectural or organizational decision with context, options, and rationale",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": { "const": "ioa.dev/v0.1" },
    "kind": { "const": "Decision" },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "pattern": "^[a-z][a-z0-9-]*$" },
        "owner": { "type": "string" },
        "labels": { "type": "object", "additionalProperties": { "type": "string" } },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "spec": {
      "type": "object",
      "required": ["id", "status", "domain", "context"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^DEC-[0-9]+$"
        },
        "status": {
          "type": "string",
          "enum": ["proposed", "accepted", "deprecated", "superseded"]
        },
        "domain": { "type": "string" },
        "date": {
          "type": "string",
          "format": "date"
        },
        "deciders": {
          "type": "array",
          "items": { "type": "string" }
        },
        "context": { "type": "string" },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "pros": {
                "type": "array",
                "items": { "type": "string" }
              },
              "cons": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "chosen": { "type": "string" },
        "rationale": { "type": "string" },
        "kpiImpact": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["kpi", "expected"],
            "properties": {
              "kpi": { "type": "string" },
              "expected": { "type": "string" }
            }
          }
        },
        "reversibility": {
          "type": "string",
          "enum": ["easy", "moderate", "hard"]
        },
        "supersededBy": {
          "type": ["string", "null"]
        }
      }
    }
  },
  "additionalProperties": false
}
