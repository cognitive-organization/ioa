{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ioa.dev/schemas/v0.1/governance.json",
  "title": "IOA Governance",
  "description": "Defines governance policies including access control, audit, failure modes, and human override channels",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": { "const": "ioa.dev/v0.1" },
    "kind": { "const": "Governance" },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "pattern": "^[a-z][a-z0-9-]*$" },
        "owner": { "type": "string" },
        "labels": { "type": "object", "additionalProperties": { "type": "string" } },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "spec": {
      "type": "object",
      "required": ["domain"],
      "properties": {
        "domain": { "type": "string" },
        "accessControl": {
          "type": "object",
          "properties": {
            "roles": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "permissions"],
                "properties": {
                  "name": { "type": "string" },
                  "permissions": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            },
            "defaultRole": { "type": "string" }
          }
        },
        "promptVersioning": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "repository": { "type": "string" }
          }
        },
        "audit": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "retention": { "type": "string" },
            "level": {
              "type": "string",
              "enum": ["full", "summary", "none"]
            }
          }
        },
        "failureModes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["scenario", "response", "escalation"],
            "properties": {
              "scenario": { "type": "string" },
              "response": { "type": "string" },
              "escalation": { "type": "string" }
            }
          }
        },
        "humanOverride": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "channels": {
              "type": "array",
              "items": { "type": "string" }
            },
            "maxResponseTime": { "type": "string" }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
