apiVersion: ioa.dev/v0.1
kind: Domain
metadata:
  name: product
  owner: "{{orgName}}"
spec:
  purpose: "Core product development and feature delivery"
  kpis:
    - name: feature-velocity
      target: "10 features/quarter"
      unit: features
    - name: user-satisfaction
      target: ">4.5"
      unit: NPS
  dataOwnership:
    - product-catalog
    - feature-flags
    - user-feedback
  events:
    produces:
      - product.feature-released
      - product.feedback-received
    consumes:
      - analytics.user-behavior
  boundaries:
    includes:
      - Feature planning
      - Product design
      - Release management
    excludes:
      - Infrastructure operations
      - Financial reporting
