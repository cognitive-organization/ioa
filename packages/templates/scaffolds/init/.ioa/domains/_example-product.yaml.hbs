apiVersion: ioa.dev/v0.2
kind: Domain
metadata:
  name: product
  owner:
    name: "{{orgName}}"
    role: domain-lead
spec:
  purpose: "Core product development and feature delivery"
  kpis:
    - name: feature-velocity
      target:
        operator: gte
        value: 10
        unit: features/quarter
      window: "1q"
    - name: user-satisfaction
      target:
        operator: gt
        value: 4.5
        unit: NPS
      window: "30d"
  dataOwnership:
    - name: product-catalog
      classification: internal
    - name: user-feedback
      classification: confidential
    - name: feature-flags
      classification: internal
  events:
    produces:
      - product.feature-released
      - product.feedback-received
    consumes:
      - analytics.user-behavior
  boundaries:
    includes:
      - Feature planning
      - Product design
      - Release management
    excludes:
      - Infrastructure operations
      - Financial reporting
