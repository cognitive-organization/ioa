apiVersion: ioa.dev/v0.2
kind: Telemetry
metadata:
  name: product-feature-released
  owner:
    name: "{{orgName}}"
    role: signal-owner
spec:
  event: "product.feature_released"
  category: metric
  severity: info
  description: "Emitted when a new feature is released to production"
  payload:
    type: object
    properties:
      featureName:
        type: string
      releaseDate:
        type: string
        format: date
      targetAudience:
        type: string
    required:
      - featureName
      - releaseDate
  metricsImpacted:
    - feature-velocity
    - user-satisfaction
  source:
    domain: product
    agent: product-analyst
  correlationId:
    required: true
    format: uuid
  retention:
    duration: "180d"
    archiveAfter: "90d"
  observability:
    dashboard: true
    alertRule:
      condition:
        metric: "events.count"
        operator: lt
        value: 2
        window: "30d"
      severity: warning
      channels:
        - slack
