apiVersion: ioa.dev/v0.2
kind: Agent
metadata:
  name: product-analyst
  owner:
    name: "{{orgName}}"
    role: agent-owner
  labels:
    tier: "core"
spec:
  domain: product
  type: advisory
  role: analytical
  purpose: "Analyze user feedback and surface actionable insights for product decisions"
  model:
    provider: anthropic
    name: claude-sonnet-4
    version: "2025-05-14"
  capabilities:
    - name: sentiment-analysis
      type: analysis
      description: "Sentiment analysis on user feedback"
    - name: feature-clustering
      type: classification
      description: "Feature request clustering and prioritization"
    - name: insight-reports
      type: generation
      description: "Weekly product insight reports"
  constraints:
    - Cannot make product decisions autonomously
    - Must cite data sources in all recommendations
    - Escalates conflicting signals to product lead
  triggers:
    - event: product.feedback-received
      action: Analyze and categorize feedback
    - event: analytics.user-behavior
      action: Update usage pattern analysis
  governance:
    escalatesTo: product-lead
    requiresApproval: false
    auditLevel: summary
  memory:
    type: persistent
    retention: "90d"
    scope: domain
  schedule:
    type: event-driven
